<%- include('../partials/header.ejs') %>

<h1><%= app.title %> at <%= app.company %></h1>

<% if (app.notes) { %>
  <p>Notes:<br> <%- app.notes.replaceAll('\n', '<br>') %></p>
<% } %>

<% if (app.postingLink) { %>
  <a target="_blank" href="<%= app.postingLink %>">View job posting</a>
<% } %>

<p>Current Status: <%= app.status.toUpperCase() %></p>

<form action="/applications/<%= app._id %>?_method=DELETE" method="POST">
  <button type="submit">🗑️</button>
</form>

<%- include('../partials/footer.ejs') %>