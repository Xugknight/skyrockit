<%- include('../partials/header.ejs') %>

<h1>Edit App</h1>

<form action="/applications" method="POST">
  <label for="company">Company:</label>
  <input type="text" name="company" id="company" value="<%= app.company %>" />

  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= app.title %>" />

  <label for="notes">Notes:</label>
  <textarea name="notes" id="notes"><%= app.notes %></textarea>

  <label for="postingLink">Posting Link:</label>
  <input type="url" name="postingLink" id="postingLink" value="<%= app.postingLink %>" />

  <label for="status">Status:</label>
  <select id="status" name="status" >
    <% statuses.forEach((status) => { %>
      <option value="<%= status %>" <%= status === app.status ? 'selected' : '' %> >
        <%= status[0].toUpperCase() + status.slice(1) %>
      </option>
    <% }) %>
  </select>
  <button type="submit">SAVE APP</button>
</form>


<%- include('../partials/footer.ejs') %>